<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant"
    tools:context=".Activity_ForgotPassword">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_marginTop="150dp"
        android:src="@drawable/splashlogo" />

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/cardBackground"
        android:layout_below="@+id/logo"
        android:layout_height="match_parent"
        android:background="@drawable/forgot_password"
        android:layout_marginBottom="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="100dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColorHint="#aeb0a5"
        android:hint="@string/account_created_email_address"
        android:id="@+id/txtEmail"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_below="@+id/logo"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:inputType="textEmailAddress"
        android:background="#00000000"
        android:textSize="12sp"/>

    <LinearLayout
        android:id="@+id/line_email"
        android:layout_below="@+id/txtEmail"
        android:orientation="horizontal"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c1c1c1"
        android:layout_marginTop="5dp">
    </LinearLayout>

    <Button
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:text="@string/submit"
        android:id="@+id/btn_submit"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/splashBackground"
        android:layout_below="@+id/line_email"
        android:background="@drawable/forgot_password_button"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/txtGetUsername"
        android:textColor="#000000"
        android:layout_marginEnd="50dp"
        android:visibility="invisible"
        android:layout_marginStart="50dp"
        android:layout_below="@+id/btn_submit"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/txtGetPassword"
        android:layout_marginEnd="50dp"
        android:textColor="#000000"
        android:visibility="invisible"
        android:layout_marginStart="50dp"
        android:layout_below="@+id/txtGetUsername"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        android:textSize="18sp"/>

</RelativeLayout>